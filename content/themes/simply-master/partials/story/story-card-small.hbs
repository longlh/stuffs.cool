<div class="cr u-overflowHidden u-flexColumnTop u-relative u-flex1 {{#is "post"}}godo-tracking{{/is}}" {{#is "post"}}data-event-category="Article" data-event-action="Related Posts" data-event-label="{{url absolute="true"}}" data-event-non-interaction="true"{{/is}}>
    {{#if feature_image}}
    <div class="cr-img u-relative u-overflowHidden u-sizeFullWidth">
        <div class="u-absolute0 u-bgCover u-bgColorGrayLight simply-lazy" data-src="{{feature_image}}"></div>
    </div>
    {{/if}}

    <div class="cr-inner u-padding15 u-flexColumnTop">
        <div class="cr-body">
            {{!-- {{#if primary_tag}}{{#primary_tag}}
            <div class="cr-tag u-fontSizeSmaller u-lineHeight1 u-textUppercase u-fontWeightSemibold">
                <a href="{{url absolute="true"}}" class="link--underline u-relative zindex4">{{name}}</a>
            </div>
            {{/primary_tag}}{{/if}} --}}

            <h2 class="cr-t u-contentTitle u-fontSize22 u-overflowHidden"><a href="{{url}}">{{title}}</a></h2>

            {{#unless feature_image}}<p class="cr-e u-textColorNormal">{{excerpt words="20"}}</p>{{/unless}}
        </div>

        {{!-- Datetime - ReadingTime - partials/helper/helper-datetime.hbs --}}
        {{> "helper/helper-datetime"}}
    </div>

    {{!-- Link --}}
    <a href="{{url}}" class="u-absolute0 zindex3"></a>
</div>
